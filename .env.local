# APIs de Trabajo - Claves para servicios externos
# Descomenta y añade tus claves cuando las tengas disponibles

# Adzuna API (2,500 llamadas gratis/mes)
# ADZUNA_APP_ID=tu_app_id_aqui
# ADZUNA_API_KEY=tu_api_key_aqui

# JSearch API via RapidAPI (tier gratuito disponible)
# RAPIDAPI_KEY=tu_rapidapi_key_aqui

# Reed API (Reino Unido - gratuita)
# REED_API_KEY=tu_reed_api_key_aqui

# LinkedIn API (requiere aprobación)
# LINKEDIN_CLIENT_ID=tu_client_id_aqui
# LINKEDIN_CLIENT_SECRET=tu_client_secret_aqui

# Indeed Publisher API (requiere aprobación)
# INDEED_PUBLISHER_ID=tu_publisher_id_aqui

# OpenRouter API para personalización con IA
# OPENROUTER_API_KEY=tu_openrouter_key_aqui

# Configuración de la aplicación
NEXT_PUBLIC_APP_URL=http://localhost:8000
NODE_ENV=development

# Base de datos (opcional - para guardar historial)
# DATABASE_URL=sqlite:./dev.db

# Configuración de email (opcional - para notificaciones)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu_email@gmail.com
# SMTP_PASS=tu_password_aqui

# Configuración de Puppeteer para web scraping
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# Límites de la aplicación
MAX_FILE_SIZE=5242880
MAX_APPLICATIONS_PER_DAY=100
RATE_LIMIT_WINDOW=3600000
